@{
    ViewBag.Title = "برند ها";
}
@model ViewModelWithPageInfo<IEnumerable<Brand>>

<main class="main-row mb-2 mt-2" style="transform: none;">
    <div class="container-main" style="transform: none;">
        <div class="d-block" style="transform: none;">
            <div class="col-lg-9 col-md-8 col-xs-12 pr mt-3">
                <section class="content-widget">
                    @foreach (var item in @Model.ViewModel)
                    {
                        <article class="post-item">
                            <div class="post-thumb">
                                <a asp-action="Detail" asp-controller="Brand" asp-route-id="@item.BrandId" class="d-block">
                                    <img src="/Images/BrandImage/@item.Image" alt="@item.Name" />
                                </a>
                            </div>
                            <div class="post-content">
                                <div class="title">
                                    <a asp-controller="Brand" asp-action="Detail" asp-route-id="@item.BrandId">
                                        <h2 class="title-tag">@item.Name</h2>
                                    </a>
                                </div>
                            </div>
                        </article>
                    }
                </section>
                <div class="pagination-product pr-3 pl-3 pr">
                    <nav aria-label="Page navigation example" page-info="@Model.PaginationInfo" root-action="Index" root-controller="Brand">
                    </nav>
                </div>
            </div>
            <vc:brand-hybrid-view-component/>
        </div>
    </div>
</main>